<ul id="queues">
  <li class="queue">
    <h4>Queue ({{length}})</h4>
    <ul>
      {{#if length}}
        {{#each job in controller}}
          <li>
            {{#if job.repo.slug}}
              {{#link-to "job" job.repo job}}
                <span class="slug" {{bind-attr title="job.slug"}}>
                  {{job.repo.slug}}
                </span>
                #{{job.number}}
              {{/link-to}}
            {{/if}}
          </li>
        {{/each}}
      {{else}}
        There are no jobs
      {{/if}}
    </ul>
  </li>
</ul>
