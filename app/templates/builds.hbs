{{#if content.isLoaded}}
{{!-- <table id="builds" class="list"> --}}
  {{#each controller as |build|}}
    {{builds-item build=build}}
  {{else}}
    {{no-builds repo=things isPR=displayPullRequests isBranch=displayBranches}}
  {{/each}}
  {{#if displayShowMoreButton}}
    <p>
      {{show-more-button isLoading=isLoading showMore=(action 'showMoreBuilds')}}
      {{#if isLoading}}
        {{loading-indicator}}
      {{/if}}
    </p>
  {{/if}}

{{else}}
  {{loading-indicator}}
{{/if}}
