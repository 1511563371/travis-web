<div id="top">
  {{outlet top}}
</div>

<div id="left">
  <div id="search_box">
    <input type="text">
  </div>

  <ul class="tabs">
    <li id="tab_recent" class="active">
      <h5><a href="#">{{t layouts.application.recent}}</a></h5>
    </li>
    {{#if currentUser}}
      <li id="tab_my_repos">
        <h5><a href="#">{{t layouts.application.my_repositories}}</a></h5>
      </li>
    {{/if}}
    <li id="tab_search">
      <h5><a href="#">{{t layouts.application.search}}</a></h5>
    </li>
  </ul>

  <div class="tab">
    {{outlet left}}
  </div>
</div>

<div id="main">
  {{outlet main}}

  {{outlet tabs}}

  <div class="tab">
    {{outlet tab}}
  </div>

  <div id="right">
    {{outlet right}}
  </div>
</div>

