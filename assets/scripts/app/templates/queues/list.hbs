<ul id="queues">
{{#each queue in controller}}
  <li class="queue">
    <h4>{{t queue}}: {{queue.name}}</h4>
    <ul {{bindAttr id="queue.id"}}>
      {{#each job in queue}}
        {{#view Travis.QueueItemView jobBinding="job"}}
          {{#if job.repoSlug}}
            <a {{action showJob job.repoData job target="Travis.app.router" href=true}}>
              <span class="slug">
                {{job.repoSlug}}
              </span>
              #{{job.number}}
            </a>
          {{/if}}
        {{/view}}
      {{else}}
        {{t no_job}}
      {{/each}}
    </ul>

    {{#if queue.isMore}}
      <a {{action loadMoreJobs this.queue target="view"}} class="show-more-jobs">
        {{queue.leftLength}} more jobs - show more
      </a>
    {{/if}}
  </li>
{{/each}}
</ul>
